<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_row_notification"
    android:padding="@dimen/History_Cell_Unit_Padding"
    android:layout_margin="@dimen/History_Cell_Function_Margin">


        <ImageView
            android:id="@+id/imgHistoryBG"
            android:layout_width="match_parent"
            android:layout_height="@dimen/History_Cell_Size"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:layout_centerInParent= "true"
            android:alpha="0.7"
            />

    <LinearLayout
        android:layout_width="@dimen/History_Cell_Size"
        android:layout_height="@dimen/History_Cell_Size"
        android:layout_centerInParent= "true"
        android:weightSum="1.0"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtOrderTitle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="24dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:weightSum="1.0"
            android:background="@android:color/transparent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgOrderEdit"
                android:layout_margin="@dimen/History_Cell_Function_Margin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@android:color/transparent"
                android:src="@drawable/icon_history_edit"
                app:tint="@android:color/primary_text_dark" />

            <ImageView
                android:id="@+id/imgOrderStatistics"
                android:layout_margin="@dimen/History_Cell_Function_Margin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@android:color/transparent"
                android:src="@drawable/icon_history_statistics"
                app:tint="@android:color/background_light" />


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>